@model IEnumerable<Product>
<div class="row pb-3">
    @foreach (var product in Model)
    {
    <div class="col-lg-3 col-sm-6 d-flex">
        <div class="card p-3 border-top border-5 rounded border-0 shadow flex-grow-1 d-flex flex-column">
            <img src="@product.ImageUrl" class="card-img-top rounded" style="height: 350px; object-fit: cover;" />
            <div class="card-body d-flex flex-column justify-content-between pb-0">
                <div class="pl-1">
                    <p class="card-title h5 text-dark text-uppercase text-center opacity-75">@product.Title</p>
                    <p class="card-title text-warning text-center">by <b>@product.Author</b></p>
                </div>
                <div class="pl-1">
                    <p class="text-dark mb-0 text-center text-opacity-75">
                        List Price:
                        <span class="text-decoration-line-through">
                                @product.ListPrice.ToString("c")
                            </span>
                    </p>
                </div>
                <div class="pl-1">
                    <p class="text-dark text-center text-opacity-75">
                        As low as:
                        <span>
                                @product.Price100.ToString("c")
                            </span>
                    </p>
                </div>
                <div class="py-4">
                    <a asp-action="Detail"
                       asp-route-productId="@product.Id"
                       class="btn btn-primary bg-gradient form-control border-0">
                        Detail
                    </a>
                </div>
            </div>
        </div>
    </div>
    }
</div>
