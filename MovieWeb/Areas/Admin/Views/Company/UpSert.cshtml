@model Company

<div class="card py-4 border-0 shadow">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id == 0 ? "Create" : "UpDate") Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="row">
                <div class="col-12">
                    <div class="p-3 border">

                        <div asp-validation-summary="ModelOnly"></div>  @* display the all  of error *@

                        <div class="mb-3 row pb-1">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row pb-1">
                            <label asp-for="PhoneNumber" class="p-0"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row pb-1">
                            <label asp-for="StreetAddress" class="p-0"></label>
                            <input asp-for="StreetAddress" class="form-control" />
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row pb-1">
                            <label asp-for="City" class="p-0"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row pb-1">
                            <label asp-for="State" class="p-0"></label>
                            <input asp-for="State" class="form-control" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row pb-1">
                            <label asp-for="PostalCode" class="p-0"></label>
                            <input asp-for="PostalCode" class="form-control" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control">@(Model.Id == 0 ? "Create" : "UpDate")</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-secondary form-control border">
                                    Back To List
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>


        </form>
    </div>
</div>



@section Scripts {
