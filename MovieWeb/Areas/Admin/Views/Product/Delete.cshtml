@model Product

<div class="card py-4 border-0 shadow">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Remove Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="p-3 border">

                <div asp-validation-summary="ModelOnly"></div>  @* display the all  of error *@

                <div class="mb-3 row pb-1">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" disabled class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3 row pb-1">
                    <label asp-for="Description" class="p-0"></label>
                    <input asp-for="Description" disabled class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3 row pb-1">
                    <label asp-for="ISBN" class="p-0"></label>
                    <input asp-for="ISBN" disabled class="form-control" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="mb-3 row pb-1">
                    <label asp-for="Author" class="p-0"></label>
                    <input asp-for="Author" disabled class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="mb-3 row pb-1">
                    <label asp-for="ListPrice" class="p-0"></label>
                    <input asp-for="ListPrice"disabled class="form-control" />
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="mb-3 row pb-1">
                    <label asp-for="Price" class="p-0"></label>
                    <input asp-for="Price" disabled class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3 row pb-1">
                    <label asp-for="Price50" class="p-0"></label>
                    <input asp-for="Price50" disabled class="form-control" />
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="mb-3 row pb-1">
                    <label asp-for="Price100" class="p-0"></label>
                    <input asp-for="Price100" disabled class="form-control" />
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Remove</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control border">
                            Back To List
                        </a>
                    </div>
                </div>

            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}